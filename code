#include <Servo.h>

#include <Hx711.h>

Servo sg90;
Hx711 scale (A2,A3);
void setup() {
Serial.begin(9600);
sg90.attach (9);
}

void loop() {
  float value = scale.getGram();
  //value=value*2
  float A; // istenilen ağırlık
  A=0;
  Serial.print(value);
  Serial.println(" g");
  sg90.write(90);
  if (value >= A)
  {
    sg90.write(0);
    }
   }
